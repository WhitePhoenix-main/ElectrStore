<div class="header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-2">
                <a href="/Index">
                    <p4>ElectrStore</p4>
                </a>
            </div>
            <div class="col-6">
                <div class="header-search">
                    <partial name="Partials/_FindFormPartial"/>
                </div>
            </div>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <div class="header-btn col-md-4 d-flex">
                    <div class="container justify-content-between p-0">
                        <div class="compare-btn">
                            <a asp-area="Identity" asp-page="#">
                                <div class="header-icons">
                                    <i class="bi bi-bar-chart"></i>
                                </div>
                                <span>Сравнить</span>
                            </a>
                        </div>
                        <div class="wishlist-btn">
                            <a asp-area="Identity" asp-page="Account/Login">
                                <div class="header-icons">
                                    <i class="bi bi-heart"></i>
                                </div>
                                <span>Избранное</span>
                            </a>
                        </div>

                        <div class="cart-btn">
                            <a asp-page="/Basket/Index">
                                <div class="header-icons">
                                    <i class="bi bi-cart3"></i>
                                </div>
                                <span>Корзина</span>
                            </a>
                        </div>
                    </div>
                    <div class="logout-btn">
                        <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnurl="/">
                            <div>
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <span>Выход</span>
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-4 d-flex justify-content-end">
                        <a class="btn login-btn position-relative" asp-area="Identity" asp-page="/Account/Login">
                            <span>
                                Войти
                            </span>
                        </a>
                    </div>
            }
        </div>
    </div>
</div>